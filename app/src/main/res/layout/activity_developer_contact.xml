<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9EEFC0">

    <include layout="@layout/toolbarc"
        android:id="@+id/toolbardc"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbardc">
    <LinearLayout
        android:id="@+id/sks"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbardc"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/sudeep"
            android:layout_gravity="center"/>



        <TextView
            android:id="@+id/sudeeplink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sudeep"
            android:clickable="true"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/sandeep" />



        <TextView
            android:id="@+id/sandeeplink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sandeep"
            android:clickable="true"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="100dp"/>


    </LinearLayout>
    </ScrollView>
   </RelativeLayout>