<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#82E0AA"
    tools:context=".StudentRegister">

    <include layout="@layout/toolbarc"
        android:id="@+id/toolbarsr"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbarsr"
        android:layout_marginTop="30dp"
        android:gravity="center">

    <TextView
        android:id="@+id/resgistrationscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text=" Student Registration"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_gravity="center"/>


    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="12"
        android:inputType="text"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:hint="Full Name"
        android:textColorHint="#46000000"/>


    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:hint="Email"
        android:textColorHint="#46000000"/>

    <EditText
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="12"
        android:textColor="#000000"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="#46000000"/>


    <EditText
        android:id="@+id/txtphn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:hint="Phone Number"
        android:inputType="number"
        android:ems="12"
        android:textColorHint="#46000000"/>

    <EditText
        android:id="@+id/txtroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:hint="Roll Number"
        android:inputType="text"
        android:ems="12" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="            Register            "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#ffff"
        android:background="@drawable/backgroung_button"
        app:layout_constraintTop_toBottomOf="@+id/txtroll" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:visibility="gone" />
</LinearLayout>

</RelativeLayout>